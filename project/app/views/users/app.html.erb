	<div class="container">
		<div class="col-md-10 col-md-offset-1">
			<div class="well">

				<div class="tab-content">
					<div class="tab-pane fade in active"  id="Home">

						<table class="table table-condensed">
							<thead>
								<tr>
									<th>Student</th>
									<th>Company</th>
									<th>Job</th>
									<th>Status</th>
								</tr>
							</thead>

							<tbody>
								<% @apps.each do |app| %>
								<% if app.job.company == @company %>
								<tr>						
									<th><%= app.student.email %></th>
									<th><%= app.job.company.name %></th>
									<th><%= app.job.title %></th>
									<% if app.status == 1 %>
									<th>ACCEPTED</th>
									<% else %>
									<th>
										<span>
											<form action="/accept/<%= app.id %>" method = "post">
												<button type = "submit"><span class="glyphicon glyphicon-ok"></span></button>
											</form>
											<form action="/remove/<%= app.id %>" method = "post">
												<button type = "submit"><span class="glyphicon glyphicon-remove"></span></button>
											</form>
										</span>
									</th>
									<% end %>
								</tr>
								<% end %>
								<% end %>
							</tbody>

						</table>

					</div>

					<div class="tab-pane fade"  id="About">
					</div>
				</div>
			</div>
		</div>
	</div>